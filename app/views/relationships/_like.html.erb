
  <% if current_user.liking?(task) %>
    <%= form_with(model: current_user.relationships.find_by(like_id: task.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :like_id, task.id %>
      <%= f.submit 'お気に入りから外す' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.relationships.build, local: true) do |f| %>
      <%= hidden_field_tag :like_id, task.id %>
      <%= f.submit 'お気に入りに登録' %>
    <% end %>
  <% end %>
